[user]
    name = Mateusz Golewski
    email = shirk3y@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
    ui = always
[color "branch"]  
    current = yellow reverse  
    local = yellow   
    remote = green
[color "diff"]  
    meta = yellow bold  
    frag = magenta bold  
    old = red bold  
    new = green bold
[color "status"]  
    added = green
    changed = red
    untracked = cyan
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status
	co = checkout
	ci = commit
	br = branch
